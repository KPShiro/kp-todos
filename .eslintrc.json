{
  "root": true,
  "ignorePatterns": [
    "node_modules",
    "package-lock.json",
    "package.json"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json",
          "e2e/tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "app",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "app",
            "style": "camelCase",
            "type": "attribute"
          }
        ],
        "indent": [
          "error",
          4
        ],
        "no-duplicate-imports": "error",
        "no-dupe-class-members": "error",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-duplicate-case": "error",
        "no-unused-expressions": "warn",
        "no-unused-labels": "warn",
        "no-unused-vars": "warn",
        "no-debugger": "error",
        "no-empty": "error",
        "no-irregular-whitespace": "error",
        "no-unexpected-multiline": "error",
        "no-unsafe-finally": "error",
        "use-isnan": "error",
        "complexity": [
          "error",
          8
        ],
        "curly": [
          "error",
          "multi"
        ],
        "default-case": "error",
        "eqeqeq": [
          "error",
          "always"
        ],
        "array-bracket-spacing": [
          "error",
          "always"
        ],
        "block-spacing": [
          "error",
          "always"
        ],
        "eol-last": [
          "error",
          "always"
        ],
        "camelcase": [
          "error",
          {
            "ignoreImports": true,
            "ignoreGlobals": true
          }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {}
    }
  ]
}
